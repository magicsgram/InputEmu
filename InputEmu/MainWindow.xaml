<Window x:Class="InputEmu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Name="mainWindow"
        Height="300" Width="600">
  <Grid>
    <GroupBox Header="Output" Margin="10,10,10,49">
      <TextBox
        Name="messageTextBox"
        TextWrapping="Wrap"
        VerticalScrollBarVisibility="Visible"
        AcceptsReturn="True"
        IsEnabled="False"
      />
    </GroupBox>
    <Label Content="Command" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="66"/>
    <TextBox Name="commandTextBox" HorizontalAlignment="Right" Margin="0,0,10,14" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="691" KeyDown="CommandTextBox_KeyDown" IsEnabled="False"/>
  </Grid>
</Window>
